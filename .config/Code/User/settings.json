{
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "editor.cursorStyle":"line",
    "editor.cursorWidth": 4,
    "editor.folding": false,
    // "editor.fontFamily": "'Fira Mono', 'Noto Mono', 'Monospace', 'Noto Color Emoji', 'Droid Sans Fallback'",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.tabCompletion": "off",
    "editor.hideCursorInOverviewRuler": false,
    "editor.hover.enabled": false, // Use Ctrl+K Ctlr+I
    "editor.hover.sticky": true,
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.autoClosingBrackets": "beforeWhitespace",
    "html.autoClosingTags": false,
    "html.format.enable": false,
    "html.validate.scripts": false,
    "html.suggest.html5": false,
    "html.format.extraLiners": "",
    // "terminal.integrated.fontFamily": "monospace",
    "workbench.tree.indent": 32,
    "workbench.tree.renderIndentGuides": "always",
    "editor.tabSize": 2,
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.detectIndentation": false
      },
    "window.titleBarStyle": "custom",
    "breadcrumbs.enabled": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.colorTheme": "Verdandi",

    "editor.occurrencesHighlight": false,
    "editor.matchBrackets": "never",
    "editor.lightbulb.enabled": false,

    "workbench.colorCustomizations": {
        "[Solarized Light]": {
            "editorGutter.background": "#f6f0dd",
            "editorLineNumber.foreground": "#c5c5c5"
        },
        "[Quiet Light]": {
            // "editorGutter.background": "#f9f9f9"
            // "editorGutter.background": "#ededf5",
            "editorLineNumber.foreground": "#c5c5c590"
        },
        "[Verdandi]": {
            "editorLineNumber.foreground": "#e0e0e0",
            "menu.border": "#329af0",
            "editorIndentGuide.background": "#f0f0f0",
            "editorIndentGuide.activeBackground": "#f0f0f0",
            "terminal.ansiBlack": "#000000",
            "terminal.ansiBlue": "#2472c8",
            "terminal.ansiBrightBlack": "#666666",
            "terminal.ansiBrightBlue": "#3b8eea",
            "terminal.ansiBrightCyan": "#29b8db",
            "terminal.ansiBrightGreen": "#23d18b",
            "terminal.ansiBrightMagenta": "#d670d6",
            "terminal.ansiBrightRed": "#f14c4c",
            "terminal.ansiBrightWhite": "#e5e5e5",
            "terminal.ansiBrightYellow": "#f5f543",
            "terminal.ansiCyan": "#11a8cd",
            "terminal.ansiGreen": "#0dbc79",
            "terminal.ansiMagenta": "#bc3fbc",
            "terminal.ansiRed": "#cd3131",
            "terminal.ansiWhite": "#e5e5e5",
            "terminal.ansiYellow": "#e5e510",
            // "terminal.border": "#80808059",
            "terminal.border": "#f00",
            "terminal.foreground": "#cccccc",
            "terminal.background": "#333333",
            "terminal.selectionBackground": "#ffffff40",
        }
    },
    "workbench.iconTheme": "verdandi",
    "files.associations": {
        "*.js": "javascript"
    },

    // May be changed often
    "window.zoomLevel": 1,
    "editor.renderWhitespace": "none",
    "editor.guides.indentation": true,
    "redhat.telemetry.enabled": true,

    // Settings only for video ::::::::::::::::::::::::::::::::
    // "editor.quickSuggestions": false,
    // "editor.quickSuggestionsDelay": 10000, // in 10 sec
    // "editor.suggestOnTriggerCharacters": false,
    // "editor.selectionHighlight": false,
    // "git.enabled": false,
    // "workbench.statusBar.visible": false,
    // "workbench.activityBar.visible": false,
    // "editor.parameterHints.enabled": false,
    // "editor.suggest.showTypeParameters": false
    // End: Settings only for video :::::::::::::::::::::::::::
}

